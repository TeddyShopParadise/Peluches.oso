@model TeddyShopWebApplication.Models.Metodo_Pago

<link rel="stylesheet" href="~/css/roles.css" />

<h2>Editar Método de Pago</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" class="role-form">
        <input type="hidden" asp-for="IdMetodoPago" />

        <div class="form-group mb-3">
            <label asp-for="NumPago" class="form-label">Número de Pago</label>
            <input asp-for="NumPago" class="form-control" placeholder="Ingresa el número de pago" />
            <span asp-validation-for="NumPago" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NombreMetodoPago" class="form-label">Nombre del Método de Pago</label>
            <input asp-for="NombreMetodoPago" class="form-control" placeholder="Ingresa el nombre del método de pago" />
            <span asp-validation-for="NombreMetodoPago" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Factura_IdFactura" class="form-label">Factura</label>
            <select asp-for="Factura_IdFactura" class="form-control" asp-items="ViewBag.Factura_IdFactura"></select>
            <span asp-validation-for="Factura_IdFactura" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-create">
                <i class="fas fa-save"></i> Guardar
            </button>

            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <!-- Agrega las validaciones de jQuery para el formulario -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
