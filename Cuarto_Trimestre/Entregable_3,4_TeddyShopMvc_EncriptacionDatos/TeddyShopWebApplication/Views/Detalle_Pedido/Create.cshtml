@model TeddyShopWebApplication.Models.Detalle_Pedido

<link rel="stylesheet" href="~/css/roles.css" />
<h2 class="text-center">Crear Detalle de Pedido</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NumDetalle" class="control-label"></label>
                <input asp-for="NumDetalle" class="form-control" />
                <span asp-validation-for="NumDetalle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrecioDetallePedido" class="control-label"></label>
                <input asp-for="PrecioDetallePedido" class="form-control" />
                <span asp-validation-for="PrecioDetallePedido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CantidadDetallePedido" class="control-label"></label>
                <input asp-for="CantidadDetallePedido" class="form-control" />
                <span asp-validation-for="CantidadDetallePedido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pedido_NumPedido" class="control-label"></label>
                <select asp-for="Pedido_NumPedido" class="form-control" asp-items="ViewBag.Pedido_NumPedido"></select>
                <span asp-validation-for="Pedido_NumPedido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Producto_IdProducto" class="control-label"></label>
                <select asp-for="Producto_IdProducto" class="form-control" asp-items="ViewBag.Producto_IdProducto"></select>
                <span asp-validation-for="Producto_IdProducto" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Crear" class="btn btn-create" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-back">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
