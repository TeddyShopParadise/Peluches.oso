@model TeddyShopWebApplication.Models.Detalle_Factura

<link rel="stylesheet" href="~/css/roles.css" />

<h2>Editar Detalle de Factura</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" class="role-form">
        <input type="hidden" asp-for="NumDetalle" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="PrecioDetalleFactura" class="form-label">Precio</label>
            <input asp-for="PrecioDetalleFactura" class="form-control" placeholder="Ingresa el precio" />
            <span asp-validation-for="PrecioDetalleFactura" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CantidadDetalleFactura" class="form-label">Cantidad</label>
            <input asp-for="CantidadDetalleFactura" class="form-control" placeholder="Ingresa la cantidad" />
            <span asp-validation-for="CantidadDetalleFactura" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Inventario_IdInventario" class="form-label">Inventario</label>
            <select asp-for="Inventario_IdInventario" class="form-control" asp-items="ViewBag.Inventario_IdInventario"></select>
            <span asp-validation-for="Inventario_IdInventario" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Producto_IdProducto" />

        <div class="form-group mb-3">
            <label asp-for="Factura_IdFactura" class="form-label">Factura</label>
            <select asp-for="Factura_IdFactura" class="form-control" asp-items="ViewBag.Factura_IdFactura"></select>
            <span asp-validation-for="Factura_IdFactura" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-create">
                <i class="fas fa-save"></i> Guardar
            </button>

            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
