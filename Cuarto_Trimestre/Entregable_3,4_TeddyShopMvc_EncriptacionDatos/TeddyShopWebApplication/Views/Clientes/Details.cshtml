@model TeddyShopWebApplication.Models.Cliente

<link rel="stylesheet" href="~/css/roles.css" />
<h2 class="text-center">Detalles del Cliente</h2>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header text-center" style="background-color: #957698; color: white;">
            <h4>Información del Cliente</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreCliente)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreCliente)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TelefonoCliente)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TelefonoCliente)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaNaciminetoCliente)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaNaciminetoCliente)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ApellidoCliente)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ApellidoCliente)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.DniCliente" class="btn btn-warning btn-lg">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
