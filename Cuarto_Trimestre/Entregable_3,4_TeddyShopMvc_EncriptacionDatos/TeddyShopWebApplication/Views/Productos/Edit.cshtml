@model TeddyShopWebApplication.Models.Producto

<link rel="stylesheet" href="~/css/roles.css" />

<h2>Editar Producto</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" class="role-form">
        <input type="hidden" asp-for="IdProducto" />

        <div class="form-group mb-3">
            <label asp-for="EstiloProducto" class="form-label">Estilo del Producto</label>
            <input asp-for="EstiloProducto" class="form-control" placeholder="Ingresa el estilo del producto" />
            <span asp-validation-for="EstiloProducto" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CmCabezaColaProducto" class="form-label">Cabeza Cola (cm)</label>
            <input asp-for="CmCabezaColaProducto" class="form-control" placeholder="Ingresa la medida de cabeza cola" />
            <span asp-validation-for="CmCabezaColaProducto" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="MaterialProducto" class="form-label">Material del Producto</label>
            <input asp-for="MaterialProducto" class="form-control" placeholder="Ingresa el material del producto" />
            <span asp-validation-for="MaterialProducto" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DisponibilidadProducto" class="form-label">Disponibilidad</label>
            <input asp-for="DisponibilidadProducto" class="form-control" placeholder="Ingresa la disponibilidad" />
            <span asp-validation-for="DisponibilidadProducto" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CmColaPataProducto" class="form-label">Cola Pata (cm)</label>
            <input asp-for="CmColaPataProducto" class="form-control" placeholder="Ingresa la medida de cola pata" />
            <span asp-validation-for="CmColaPataProducto" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TamañoProducto" class="form-label">Tamaño del Producto</label>
            <input asp-for="TamañoProducto" class="form-control" placeholder="Ingresa el tamaño del producto" />
            <span asp-validation-for="TamañoProducto" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-create">
                <i class="fas fa-save"></i> Guardar
            </button>

            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <!-- Agrega las validaciones de jQuery para el formulario -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
