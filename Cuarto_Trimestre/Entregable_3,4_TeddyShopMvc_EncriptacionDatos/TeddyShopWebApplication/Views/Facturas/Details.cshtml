@model TeddyShopWebApplication.Models.Factura

<link rel="stylesheet" href="~/css/roles.css" />
<h2 class="text-center">Detalles de la Factura</h2>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header text-center" style="background-color: #957698; color: white;">
            <h4>Información de la Factura</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaCreacion_Factura)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaCreacion_Factura)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.HoraCreacion_Factura)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HoraCreacion_Factura)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cliente_DniClienteNavigation)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente_DniClienteNavigation.DniCliente)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Pedido_NumPedidoNavigation)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Pedido_NumPedidoNavigation.NumPedido)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.IdFactura" class="btn btn-warning btn-lg">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
