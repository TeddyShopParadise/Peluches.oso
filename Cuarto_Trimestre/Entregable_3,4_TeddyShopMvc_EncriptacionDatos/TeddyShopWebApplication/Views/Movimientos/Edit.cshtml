@model TeddyShopWebApplication.Models.Movimiento

<link rel="stylesheet" href="~/css/roles.css" />

<h2>Editar Movimiento</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" class="role-form">
        <input type="hidden" asp-for="IdMovimiento" />

        <div class="form-group mb-3">
            <label asp-for="Fecha" class="form-label">Fecha</label>
            <input asp-for="Fecha" class="form-control" placeholder="Ingresa la fecha" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CantidadIngreso" class="form-label">Cantidad de Ingreso</label>
            <input asp-for="CantidadIngreso" class="form-control" placeholder="Ingresa la cantidad de ingreso" />
            <span asp-validation-for="CantidadIngreso" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CantidadVendida" class="form-label">Cantidad Vendida</label>
            <input asp-for="CantidadVendida" class="form-control" placeholder="Ingresa la cantidad vendida" />
            <span asp-validation-for="CantidadVendida" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Inventario_IdInventario" class="form-label">Inventario</label>
            <select asp-for="Inventario_IdInventario" class="form-control" asp-items="ViewBag.Inventario_IdInventario"></select>
            <span asp-validation-for="Inventario_IdInventario" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-create">
                <i class="fas fa-save"></i> Guardar
            </button>

            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <!-- Agrega las validaciones de jQuery para el formulario -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
