@model TeddyShopWebApplication.Models.Vendedor

<link rel="stylesheet" href="~/css/roles.css" />

<h2>Editar Vendedor</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" class="role-form">
        <input type="hidden" asp-for="DniEmpleado" />

        <div class="form-group mb-3">
            <label asp-for="CodigoVendedor" class="form-label">Código del Vendedor</label>
            <input asp-for="CodigoVendedor" class="form-control" placeholder="Ingresa el código del vendedor" />
            <span asp-validation-for="CodigoVendedor" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DniEmpleado" class="form-label">DNI del Empleado</label>
            <input asp-for="DniEmpleado" class="form-control" placeholder="Ingresa el DNI del empleado" readonly />
            <span asp-validation-for="DniEmpleado" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-create">
                <i class="fas fa-save"></i> Guardar
            </button>

            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <!-- Agrega las validaciones de jQuery para el formulario -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
