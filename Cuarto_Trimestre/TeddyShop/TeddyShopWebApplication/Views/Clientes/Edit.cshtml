@model TeddyShopWebApplication.Models.Cliente

<link rel="stylesheet" href="~/css/roles.css" />

<h2>Editar Cliente</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" class="role-form">
        <input type="hidden" asp-for="DniCliente" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="NombreCliente" class="form-label">Nombre</label>
            <input asp-for="NombreCliente" class="form-control" placeholder="Ingresa el nombre del cliente" />
            <span asp-validation-for="NombreCliente" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ApellidoCliente" class="form-label">Apellido</label>
            <input asp-for="ApellidoCliente" class="form-control" placeholder="Ingresa el apellido del cliente" />
            <span asp-validation-for="ApellidoCliente" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TelefonoCliente" class="form-label">Teléfono</label>
            <input asp-for="TelefonoCliente" class="form-control" placeholder="Ingresa el teléfono del cliente" />
            <span asp-validation-for="TelefonoCliente" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FechaNaciminetoCliente" class="form-label">Fecha de Nacimiento</label>
            <input asp-for="FechaNaciminetoCliente" class="form-control" type="date" />
            <span asp-validation-for="FechaNaciminetoCliente" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-create">
                <i class="fas fa-save"></i> Guardar
            </button>

            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
