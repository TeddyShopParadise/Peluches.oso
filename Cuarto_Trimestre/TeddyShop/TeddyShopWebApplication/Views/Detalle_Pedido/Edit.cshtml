@model TeddyShopWebApplication.Models.Detalle_Pedido

<link rel="stylesheet" href="~/css/roles.css" />

<h2>Editar Detalle de Pedido</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" class="role-form">
        <input type="hidden" asp-for="NumDetalle" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="PrecioDetallePedido" class="form-label">Precio</label>
            <input asp-for="PrecioDetallePedido" class="form-control" placeholder="Ingresa el precio" />
            <span asp-validation-for="PrecioDetallePedido" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CantidadDetallePedido" class="form-label">Cantidad</label>
            <input asp-for="CantidadDetallePedido" class="form-control" placeholder="Ingresa la cantidad" />
            <span asp-validation-for="CantidadDetallePedido" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Pedido_NumPedido" class="form-label">Número de Pedido</label>
            <select asp-for="Pedido_NumPedido" class="form-control" asp-items="ViewBag.Pedido_NumPedido"></select>
            <span asp-validation-for="Pedido_NumPedido" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Producto_IdProducto" class="form-label">Producto</label>
            <select asp-for="Producto_IdProducto" class="form-control" asp-items="ViewBag.Producto_IdProducto"></select>
            <span asp-validation-for="Producto_IdProducto" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-create">
                <i class="fas fa-save"></i> Guardar
            </button>

            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
