@model TeddyShopWebApplication.Models.Catalogo

<link rel="stylesheet" href="~/css/roles.css" />

<h2>Editar Catálogo</h2>

<div class="form-container">
    <form asp-action="Edit" method="post" class="catalogo-form">
        <input type="hidden" asp-for="IdCatalogo" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="DisponibilidadCatalogo" class="form-label">Disponibilidad</label>
            <input asp-for="DisponibilidadCatalogo" class="form-control" placeholder="Ingresa la disponibilidad" />
            <span asp-validation-for="DisponibilidadCatalogo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EstiloCatalogo" class="form-label">Estilo</label>
            <input asp-for="EstiloCatalogo" class="form-control" placeholder="Ingresa el estilo" />
            <span asp-validation-for="EstiloCatalogo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Compañia_NIT" class="form-label">Compañía</label>
            <select asp-for="Compañia_NIT" class="form-control" asp-items="ViewBag.Compañia_NIT"></select>
            <span asp-validation-for="Compañia_NIT" class="text-danger"></span>
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-create">
                <i class="fas fa-save"></i> Guardar
            </button>

            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
